{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Violent Crime Rates by US State",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/clow0007/FIT3179/main/VegaLite/Week%209%20Homework/js/us-states.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/clow0007/FIT3179/main/VegaLite/Week%209%20Homework/data/US_violent_crime.csv"
        },
        "key": "Country",
        "fields": ["Murder"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Murder Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "State"},
      {"field": "Murder", "type": "quantitative"}
    ]
  }
}